# SPARQL Agent Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM API Keys (at least one required for query generation)
# =============================================================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# LLM Provider Selection
LLM_PROVIDER=anthropic
LLM_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# Application Settings
# =============================================================================
LOG_LEVEL=INFO
API_PORT=8000
MCP_PORT=3000
API_WORKERS=4

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_MEMORY=256mb

# =============================================================================
# Cache Settings
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600

# =============================================================================
# SPARQL Endpoint Configuration
# =============================================================================
DEFAULT_SPARQL_ENDPOINT=https://sparql.uniprot.org/sparql

# =============================================================================
# Ontology Service
# =============================================================================
OLS_API_BASE_URL=https://www.ebi.ac.uk/ols4/api

# =============================================================================
# Security
# =============================================================================
API_KEY_ENABLED=false
API_KEY=
CORS_ORIGINS=*

# =============================================================================
# Docker Configuration
# =============================================================================
VERSION=latest
BUILD_DATE=
VCS_REF=

# Registry (for pushing images)
DOCKER_REGISTRY=

# =============================================================================
# Monitoring (optional)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# Development (optional)
# =============================================================================
JUPYTER_TOKEN=sparql-agent
POSTGRES_PASSWORD=dev_password

# =============================================================================
# Kubernetes (optional)
# =============================================================================
K8S_NAMESPACE=sparql-agent
INGRESS_HOST=sparql-agent.example.com
